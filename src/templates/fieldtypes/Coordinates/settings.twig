{% import "_includes/forms" as forms %}

{{ forms.checkboxField({
    label: 'Show map'|t('app'),
    name: 'showMap',
    checked: field.showMap,
    toggle: 'mapProviderContainer'
}) }}

<div id="mapProviderContainer" class="nested-fields{% if not field.showMap %} hidden{% endif %}">
    {{ forms.selectField({
        label: 'Map Provider',
        name: 'mapProvider',
        value: field.mapProvider,
        options: {
            mapbox: {
                label: 'MapBox',
                value: 'mapbox'
            },
            google: {
                label: 'Google',
                value: 'google'
            }
        }
    }) }}

    {{ forms.autosuggestField({
        label: 'API Key',
        name: 'apiKey',
        value: field.apiKey,
        suggestEnvVars: true
    }) }}
</div>