{% set deps = geolocation.dependencyCheck() %}

<strong>Dependencies</strong>
{% if deps.simplemap is defined %}
    {% if deps.simplemap.craft is defined %}
        {% if deps.simplemap.craft %} 
            <p>ether\simplemap is installed and will be used for Geolocation.</p>
        {% else %}
            {% if deps.simplemap.composer is defined %}
                {% if deps.simplemap.composer %}
                    <p>ether\simplemap is installed via composer, but not installed in Craft.</p>
                {% else %}
                    <p>ether\simplemap is not installed. <a href="https://github.com/ethercreative/SimpleMap">Click Here</a> to get started.</p>
                {% endif %}
            {% endif %}
        {% endif %}
    {% endif %}
{% endif %}